doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible' content='ie=edge')

        title= (title || 'Sunset-V3')

        link(rel='stylesheet' href=mix('/css/core/app.css'))
        block styles

        script(defer src=mix('/js/core/app.js'))
        block scripts

    body
        nav.navbar(role='navigation' aria-label='main navigation')
            .navbar-brand
                a.navbar-item(href=global.serverUrl)
                    img.nav-bar-logo
                a.navbar-burger.burger(role='button' aria-label='menu'
                    aria-expanded='false' data-target='navbarBasicExample')
                    span(aria-hidden='true')
                    span(aria-hidden='true')
                    span(aria-hidden='true')
            #navbarBasicExample.navbar-menu
                .navbar-start
                    a.navbar-item(href=Router.routePath('home.index'))
                        | Home
                    .navbar-item.has-dropdown.is-hoverable
                        a.navbar-link
                            | More
                        .navbar-dropdown
                            a.navbar-item
                                | About
                            hr.navbar-divider
                            a.navbar-item
                                | Report an issue
                .navbar-end
                    .navbar-item
                        .buttons
                            if (can('auth', req))
                                a.button.is-light(href=Router.routePath('auth.logout'))
                                    | Log out
                            else
                                a.button.is-primary
                                    strong Sign up
                                a.button.is-light(href=Router.routePath('auth.login'))
                                    | Log in

        section.section#app
            .contaier
                block content

        footer.footer
            .content.has-text-left
                p Ojvar world
